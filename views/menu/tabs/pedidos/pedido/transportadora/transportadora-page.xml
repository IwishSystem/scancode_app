<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="page t-md" actionBarHidden="true">
	<StackLayout class="m-x-15 form">
		<Label text="Transportadora" class="h1 font-weight-light" />
		<StackLayout class="input-field">
			<Label text="Nome da Transportadora" class="label font-weight-bold m-b-5" />
			<TextField class="input t-md" text="{{ transportadora }}" />
			<StackLayout class="hr-light"></StackLayout>
		</StackLayout>
		<Button class="bg-green white" text="SALVAR" tap="{{ salvar }}" />
	</StackLayout>
</Page>